# SOC-Lite Configuration Template
# Copy this file to apps/backend/.env and update with your values

# Application
NODE_ENV=development
PORT=3000

# Database (RDS PostgreSQL)
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=agentdb
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_SSL=true

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=https://aws1.c6web.com,http://localhost:5173

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Bedrock AgentCore
BEDROCK_AGENTCORE_SECOPS_AGENT_ARN=arn:aws:bedrock-agentcore:us-east-1:ACCOUNT:runtime/secops_agent-ID
BEDROCK_AGENTCORE_BULK_ANALYSIS_AGENT_ARN=arn:aws:bedrock-agentcore:us-east-1:ACCOUNT:runtime/bulk-analysis-agent-ID

# SNS Topics
SNS_TOPIC_ARN_CRITICAL=arn:aws:sns:us-east-1:ACCOUNT:soc-lite-critical-alerts
SNS_TOPIC_ARN_MONITORING=arn:aws:sns:us-east-1:ACCOUNT:soc-lite-monitoring

# Email Alerts
ALERT_EMAIL=your-email@example.com

# Frontend (for apps/frontend/.env)
# VITE_API_URL=http://localhost:3000/api
# VITE_API_URL=https://aws1.c6web.com/api (production)
